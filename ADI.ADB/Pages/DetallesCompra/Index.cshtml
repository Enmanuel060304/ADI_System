@page
@model ADI.ADB.Pages.DetallesCompra.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Descuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetalleCompra[0].Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DetalleCompra) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compra.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
