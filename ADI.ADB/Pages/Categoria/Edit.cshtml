@page
@model ADI.ADB.Pages.Categoria.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Categorias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categorias.id" />
            <div class="form-group">
                <label asp-for="Categorias.Nombre" class="control-label"></label>
                <input asp-for="Categorias.Nombre" class="form-control" />
                <span asp-validation-for="Categorias.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorias.Id_Linea" class="control-label"></label>
                <select asp-for="Categorias.Id_Linea" class="form-control" asp-items="ViewBag.Id_Linea"></select>
                <span asp-validation-for="Categorias.Id_Linea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

